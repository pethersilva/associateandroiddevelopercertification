<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:id="@+id/btn_snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_regular_snackbar_button"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_snackbar_action"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="114dp"
    />
    <Button
            android:text="@string/main_activity_action_snackbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_snackbar_action"
            app:layout_constraintStart_toStartOf="@+id/btn_snackbar"
            app:layout_constraintEnd_toEndOf="@+id/btn_snackbar" app:layout_constraintTop_toBottomOf="@+id/btn_snackbar"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/btn_custom_snackbar"/>
    <Button
            android:text="@string/main_activity_custom_snackbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_custom_snackbar"
            app:layout_constraintStart_toStartOf="@+id/btn_snackbar_action"
            app:layout_constraintEnd_toEndOf="@+id/btn_snackbar_action" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_snackbar_action"/>

</androidx.constraintlayout.widget.ConstraintLayout>